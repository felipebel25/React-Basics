{
    "compilerOptions": {
      "target": "es2019", // Or a more recent ES version like "es2022"
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "bundler", // Or "node" for older setups
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx", // Or "react" for older React versions
      "baseUrl": "./src", // Optional: for absolute imports from 'src'
      "paths": { // Optional: for alias paths
        "@components/*": ["components/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }